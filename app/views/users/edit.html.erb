<h1><%= @user.name %>さんの編集ページ</h1>
<div class="form-group">
  <%= form_with model: current_user, local: true do |f| %>
  
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control" %>
    
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control" %>
    
    <%= f.label :introduction, "紹介文" %>
    <%= f.text_area :introduction, class: "form-controll" %>
    
    <%= f.label :user_image, "プロフィール画像" %>
    <%= f.attachment_field :user_image %>
    
    <%= f.submit "編集する", class: "btn btn-warning" %>
  <% end %>
</div>